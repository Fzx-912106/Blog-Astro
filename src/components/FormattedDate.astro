---
// 日期格式化组件
// - 接收一个 Date 类型的 date 属性，渲染为人类可读的短日期（如 "Jul 08 2022"）
// - 若需本地化为中文，可把 toLocaleDateString 的第一个参数改为 'zh-CN'
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
