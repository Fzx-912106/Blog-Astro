---
// 全局头部组件：将全站通用的 meta、字体预载、favicon、OG、RSS 等放在这里。
// 在每个页面里通过 <BaseHead title={...} description={...} /> 引入。
// 注：如果项目中不存在占位图，请把 import 的路径替换或删除相关引用。
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

// 构建 canonical URL（基于当前请求路径）
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// 接收传入属性，若未传 image 则使用占位图
const { title, description, image = FallbackImage } = Astro.props as Props;
---

<!-- 全局元数据 -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL('rss.xml', Astro.site)}
/> 
<meta name="generator" content={Astro.generator} />

<!-- 字体预加载（可替换为你放入 public/fonts 的字体） -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- 规范化链接 -->
<link rel="canonical" href={canonicalURL} />

<!-- 页面主要 meta -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph（用于社交卡片） -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<!-- Twitter 卡片 -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />
